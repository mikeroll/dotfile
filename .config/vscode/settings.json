{
    //
    // UI
    //
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "GitHub Light",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#695d6980",
        "terminal.foreground": "#464646",
        "terminalCursor.background": "#464646",
        "terminalCursor.foreground": "#464646",
        "terminal.ansiBlack": "#F7F7F7",
        "terminal.ansiBlue": "#686868",
        "terminal.ansiBrightBlack": "#ABABAB",
        "terminal.ansiBrightBlue": "#686868",
        "terminal.ansiBrightCyan": "#868686",
        "terminal.ansiBrightGreen": "#8E8E8E",
        "terminal.ansiBrightMagenta": "#747474",
        "terminal.ansiBrightRed": "#7C7C7C",
        "terminal.ansiBrightWhite": "#101010",
        "terminal.ansiBrightYellow": "#A0A0A0",
        "terminal.ansiCyan": "#868686",
        "terminal.ansiGreen": "#8E8E8E",
        "terminal.ansiMagenta": "#747474",
        "terminal.ansiRed": "#7C7C7C",
        "terminal.ansiWhite": "#464646",
        "terminal.ansiYellow": "#A0A0A0"
    },
    "explorer.openEditors.visible": 10,
    "workbench.editor.showTabs": true,
    "workbench.settings.editor": "json",
    "editor.smoothScrolling": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "debug.toolBarLocation": "docked",
    "breadcrumbs.enabled": true,
    "window.titleBarStyle": "native",
    "scm.defaultViewMode": "tree",
    "search.useGlobalIgnoreFiles": true,
    //
    // Terminal
    //
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.linuxExec": "termite",
    "terminal.explorerKind": "external",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Iosevka",
    "debug.console.fontFamily": "Iosevka",
    "debug.console.fontSize": 14,
    //
    // Editor
    //
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Iosevka",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveTimeout": 2500,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "selection",
    "editor.roundedSelection": false,
    "editor.rulers": [
        80,
        120
    ],
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "openInBrowsers.browser": "Firefox Nightly",
    //
    // Git
    //
    "git.autofetch": true,
    "git.confirmSync": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.blame.avatars": false,
    "gitlens.blame.format": "${author|16?} ${agoOrDate|14-}",
    "gitlens.blame.heatmap.location": "left",
    "gitlens.blame.separateLines": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    //
    // Python
    //
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.jediEnabled": false,
    "python.venvPath": "~/code/.virtualenvs",
    "python.terminal.activateEnvironment": false,
    "python.sortImports.args": [
        "--settings-path",
        "${workspaceFolder}"
    ],
    //
    // JS
    //
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    //
    // Rust
    //
    "rust-client.rustupPath": "/Users/mike/.local/share/cargo/bin/rustup",
    //
    // Go
    //
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    //
    // Syntax-specific
    //
    "files.exclude": {
        // Python
        "**/*.pyc": true,
        "**/__pycache__": true,
        ".idea": true,
        ".mypy_cache": true,
        ".pytest_cache": true,
        ".tox": true,
    },
    "files.associations": {
        "*.jenkinsfile": "groovy",
        "Vagrantfile": "ruby",
        "Pipfile": "toml"
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.rulers": [
            88
        ]
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[dockerfile]": {
        "editor.formatOnSave": false,
    },
    "[terraform]": {
        "editor.formatOnType": false,
        "editor.codeLens": false
    },
    "shellcheck.ignorePatterns": {
        "**/*.zsh": true,
        "**/.zsh*": true,
        "**/.zprofile": true,
        "**/.envrc": true,
    },
    //
    // Project Manager
    //
    "projectManager.git.baseFolders": [
        "$home/dotfiles",
        "$home/code",
        "$home/work"
    ]
}
